<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
     TAUREWA Gear
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication4.styles.css" asp-append-version="true" />

    <style>
        button,
        .btn {
            outline: none !important;
            box-shadow: none !important;
        }
        .btn-primary {
            color: #fff;
            background-color: #336539 !important;
        }
    body {
        margin: 0;
        padding-top: 80px;
           
            font-family: 'Inter', sans-serif;
    }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: bold;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

    .promo-bar {
        background-color: #000;
        color: #fff;
        text-align: center;
        font-weight: 600;
        padding: 8px;
        font-size: 13px;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1050;
        letter-spacing: 0.5px;
    }
   @@media screen and (min-width: 1000px) {
            .navbar {
                background-color: #336539;
   color: white !important;
                font-weight: bold !important;
                
        
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
        position: fixed;
        top: 40px;
        width: 100%;
        height: 5.05vh;
        z-index: 1040;
        padding: 0.5rem 1rem;
        margin-top: -0.5%;
    }
   }

        @@media screen and (max-width: 1000px) {
            .navbar {
                background-color: #fff;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
                position: fixed;
                top: 40px;
                width: 100%;
                z-index: 1040;
                margin-top: -0.5%;
            }       
        }

    .navbar-brand,
    .nav-link {
        color: white !important;
        font-weight: 300;
        font-size: 1.1rem;
        transition: color 0.3s ease;
        font-family: sans-serif !important;
    }

    .navbar-brand:hover,
    .nav-link:hover {
    
        text-decoration: none !important;
    }

    .search-container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        margin: 10px 0;
    }

    .search-form {
        display: flex;
        width: 100%;
        max-width: 500px;
        border: 1px solid #ccc;
        border-radius: 6px;
        overflow: hidden;
        background-color: #fff;
    }

    .search-input {
        flex-grow: 1;
        padding: 10px 12px;
        border: none;
        outline: none;
        font-size: 14px;
        color: #333;
    }

    .search-button {
        background-color: #000;
        color: #fff;
        border: none;
        padding: 0 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .search-button:hover {
        background-color: #008080;
    }

    .search-button svg {
        fill: #fff;
    }

    .bi-bag {
        fill: black;
    }

    .nav-icons a {
        text-decoration: none;
        color: black;
        font-size: 18px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

   
    }
    </style>

</head>

<body>
    <div class="promo-bar" style="z-index:100000000;">
        Camp Gear System
    </div>

            <nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(90deg, #336539 0%, #27492b 100%); box-shadow: 0 2px 3px rgba(0,0,0,0.10); border-bottom: 2px solid #e0e0e0; position: fixed; top: 40px; width: 100%; z-index: 1040; padding: 0.7rem 2rem;">
                <div class="container-fluid">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #fff; font-weight: 700; letter-spacing: 1px; font-size: 1.35rem; text-shadow: 0 1px 2px rgba(0,0,0,0.08);">
                            AVCOL CAMP GEAR HIRE
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" style="border-color: #fff;">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Items" asp-action="Index" style="color: #fff; font-weight: 500; margin-right: 3px; transition: color 0.2s; border-radius: 4px; padding: 8px 10px;">
                                        Items
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Stocks" asp-action="Index" style="color: #fff; font-weight: 500; margin-right: 3px; transition: color 0.2s; border-radius: 4px; padding: 8px 10px;">
                                        Stock
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index" style="color: #fff; font-weight: 500; margin-right: 3px; transition: color 0.2s; border-radius: 4px; padding: 8px 10px;">
                                        Orders
                                    </a>
                                </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="DatePicker" style="color: #fff; font-weight: 500; margin-right: 3px; transition: color 0.2s; border-radius: 4px; padding: 8px 10px;">
                                Analytics
                            </a>
                        </li>
                            </ul>
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <div style="margin-left: 12px;">
                                        <partial name="_LoginPartial" />
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </nav>

    <div class="container" style="margin-top: 4%;">

        <div id="loader" style="display: flex; justify-content: center; align-items: center; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.8); z-index: 9999;">
            <div style="border: 8px solid #e0e0e0; border-top: 8px solid green; border-radius: 50%; width: 60px; height: 60px; animation: spin 1s linear infinite;"></div>
        </div>

        <style>
            @@keyframes spin {
                0% {
                    transform: rotate(0deg);
                }

                100% {
                    transform: rotate(360deg);
                }
            }
        </style>

        <!-- Loader Script and Animation -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            // Hide loader after page load
            $(window).on('load', function () {
                $('#loader').fadeOut();
            });

            // Show loader on link click
            $(document).on('click', 'a', function (e) {
                var href = $(this).attr('href');
                if (href && !href.startsWith('#') && !$(this).attr('target')) {
                    $('#loader').show();
                }
            });
        </script>


        <main role="main" class="pb-3" style="margin:0; display:flex; flex-direction:column; min-height:100vh;">
            @RenderBody()
        </main>
    </div>
    <footer style="background-color: #ffffff; color: #336539; padding: 1rem; text-align: center; font-family: Arial, sans-serif; font-size: 0.9rem; border-top: 1px solid #ccc;">
        <div>
            <strong>Avcol Camp System</strong> — All rights reserved.<br>
            Developed by Aaron Colaco. For any issues or enquiries, please <a href="mailto:colacoLaaron@gmail.com" style="color: #336539; text-decoration: underline;">contact me</a>.
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
