@using static WebApplication4.Models.Stock
@model WebApplication4.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockId" />
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            
           
            @if (ViewBag.Cat != 1){

            <div class="form-group">
                <label asp-for="ClothingSizes" class="control-label"></label>
                <select asp-for="ClothingSizes" class="form-control">
                    @foreach (ClothingSize size in Enum.GetValues(typeof(ClothingSize)))
                    {
                        <option value="@size">@size.ToString()</option>
                    }
                </select>
                <span asp-validation-for="ClothingSizes" class="text-danger"></span>
            </div>
            }else{

            <div class="form-group">
                <label asp-for="ShoeSizes" class="control-label"></label>
                <select asp-for="ShoeSizes" class="form-control">
                    @foreach (ShoeSize size in Enum.GetValues(typeof(ShoeSize)))
                    {
                        <option value="@size">@size.ToString()</option>
                    }
                </select>
                <span asp-validation-for="ShoeSizes" class="text-danger"></span>
            </div>
            }
            <div class="form-group text-center mt-4">
                <input type="submit" value="Save" class="btn" style="background-color: slateblue; color: white;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
