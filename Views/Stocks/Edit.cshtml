@using static WebApplication4.Models.Stock
@model WebApplication4.Models.Stock

@{
    ViewData["Title"] = "Edit";
}
<input type="submit" value="Delete" class="btn btn-danger" />

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Stocks" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockId" />
            <div class="form-group">
                <label asp-for="Item" class="control-label"></label>

                <input type="hidden" name="Page" value="@ViewBag.Page" />
                <input type="hidden" name="SearchTerm" value="@ViewBag.SearchTerm" />


                <input asp-for="ItemId" type="hidden" value="@ViewBag.ItemId" />

                <input type="text" value="@ViewBag.Name" readonly class="form-control" />

                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockNumber" class="control-label"></label>
                <input asp-for="StockNumber" class="form-control"  />
                <span asp-validation-for="StockNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input list="brand-list" asp-for="Brand" class="form-control" />
                <datalist id="brand-list">
                    @if (ViewBag.BrandOptions != null)
                    {
                        foreach (var brand in ViewBag.BrandOptions as IEnumerable<string>)
                        {
                            <option value="@brand"></option>
                        }
                    }
                </datalist>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <input list="colour-list" asp-for="Colour" class="form-control" />
                <datalist id="colour-list">
                    @if (ViewBag.ColourOptions != null)
                    {
                        foreach (var colour in ViewBag.ColourOptions as IEnumerable<string>)
                        {
                            <option value="@colour"></option>
                        }
                    }
                </datalist>
                <span asp-validation-for="Colour" class="text-danger"></span>
            </div>

            @if (ViewBag.Cat != 1)
            {
                <div class="form-group">
                    <label asp-for="ClothingSizes" class="control-label"></label>
                    <select asp-for="ClothingSizes" class="form-control">
                        @foreach (ClothingSize size in Enum.GetValues(typeof(ClothingSize)))
                        {
                            <option value="@size">@size.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="ClothingSizes" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="ShoeSizes" class="control-label"></label>
                    <select asp-for="ShoeSizes" class="form-control">
                        @foreach (ShoeSize size in Enum.GetValues(typeof(ShoeSize)))
                        {
                            <option value="@size">@size.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="ShoeSizes" class="text-danger"></span>
                </div>
            }

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label asp-for="Notes" class="control-label" style="font-weight: 500; color: #495057;"></label>
                <textarea asp-for="Notes" class="form-control" maxlength="500" rows="5" style="resize: vertical; border-radius: 0.5rem; border: 1px solid #ced4da; background-color: #f8f9fa;"></textarea>
                <span asp-validation-for="Notes" class="text-danger" style="font-size: 0.95em;"></span>
            </div>

            <div class="form-group" style="margin-top: 3%;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}