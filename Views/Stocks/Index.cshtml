@model IEnumerable<WebApplication4.Models.Stock>
@{
    ViewData["Title"] = "Gear Stock";
}

<h1 class="text-center mt-4">Gear Stock</h1>

<div class="text-center mb-4">
    <a class="btn btn-success" asp-action="Create">+ Create New</a>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-controller="Stocks" asp-action="Index">
                <div class="input-group input-group-lg shadow-sm">
                    <input type="text" name="SearchTerm" class="form-control rounded-start-pill border-0" placeholder="Search by item, email, or student number" />
                    <button class="btn btn-primary rounded-end-pill px-4" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-4 mb-5">
    <div class="card text-center shadow-sm" style="width: 220px;">
        <div class="card-body">
            <h5 class="card-title">Gear Out Hired</h5>
            <p class="display-6 text-primary fw-bold">@ViewBag.GearHire</p>
        </div>
    </div>
    <div class="card text-center shadow-sm" style="width: 220px;">
        <div class="card-body">
            <h5 class="card-title">Available Stock</h5>
            <p class="display-6 text-primary fw-bold">@ViewBag.StockNumber</p>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Item Name</th>
                <th>Stock ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Student Number</th>
                <th>Unassign</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Items.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.StockId)</td>
                    <td>@Html.DisplayFor(modelItem => item.user.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.user.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.user.StudentNumber)</td>
                    <td>
                        @if (item.user != null)
                        {
                            <form asp-action="UA" method="post" class="d-inline">
                                <input type="hidden" name="StockId" value="@item.StockId" />
                                <input type="hidden" name="SearchTerm" value="@ViewBag.SearchTerm" />
                                <button type="submit" class="btn btn-danger btn-sm">Unassign</button>
                            </form>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.StockId">Edit</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.StockId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.StockId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
