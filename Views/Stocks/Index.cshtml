@model IEnumerable<WebApplication4.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<h1>Gear Stock</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-controller="Stocks" asp-action="Index" >
                <div class="input-group input-group-lg shadow-sm">
                    <input type="text"
                           name="SearchTerm"
                           class="form-control rounded-pill border-0"
                           placeholder="Search stocks by item name, email, or student number"
                           aria-label="Search stocks" />

                    <div class="input-group-append">
                        <button class="btn btn-primary rounded-pill ml-2 px-4" type="submit">
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<div style="display: flex; justify-content: center; align-items: center; gap: 30px; margin-top: 50px;">

    <div style="background-color: #f4f7fa; border-radius: 10px; padding: 20px; width: 200px; text-align: center; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
        <h3 style="font-size: 18px; color: #333; margin-bottom: 10px;">Total Gear Requested</h3>
        <p style="font-size: 24px; font-weight: bold; color: #2b7a78; margin-top: 10px;">
            @ViewBag.GearRequestedNumber
            </p>
    </div>

    <div style="background-color: #f4f7fa; border-radius: 10px; padding: 20px; width: 200px; text-align: center; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
        <h3 style="font-size: 18px; color: #333; margin-bottom: 10px;">Available Stock</h3>
        <p style="font-size: 24px; font-weight: bold; color: #2b7a78; margin-top: 10px;">@ViewBag.StockNumber</p>
    </div>
</div>

<table class="table">
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Items.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockId)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.user.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.StudentNumber)
                </td>
                <td>

                    
                    <form asp-action="UA">
                        <input type="hidden" value="@item.StockId" name="StockId" />
                             <input type="hidden" name="SearchTerm" value="@ViewBag.SearchTerm" />

                        <input type="submit" value="Unassign" class="btn btn-primary" style="background-color: red" />
                   
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StockId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StockId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StockId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
