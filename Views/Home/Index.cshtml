@{
    ViewData["Title"] = "Home Page";
}

<section class="vid" style="margin:0%; padding: 0%; z-index: 10000; width:100%">
    <div class="holder">
        <video src="~/Images/LandingPageVideo.mp4" autoplay muted loop playsinline style="width: 100%; height: auto; object-fit: cover;"></video>
    </div>

    <div class="video-overlay">
        <div id="hero" class="hero">
            <h1 style="font-family: 'Playfair Display', serif; font-size: 3rem; font-weight: bold; text-transform: uppercase; margin: 0;">Camp Adventures</h1>
            <p style="font-size: 1.2rem; margin-top: 10px; letter-spacing: 1px;">Embrace the thrill of the outdoors, adventure, and lifelong memories at Taurewa Camp.</p>
        </div>
    </div>
</section>

<style>
    body, .container, .pb-3, html {
        margin: 0%;
        padding: 0%;
        all: unset;
    }

    .vid {
        position: relative;
        z-index: 900;
        height: 1000px;
    }

        .vid video {
            object-fit: cover;
            margin-top: -1%;
        }

        .vid .holder {
            position: sticky;
            top: 0;
            height: 100vh;
        }

    .video-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 950;
        color: #fff;
        font-size: 3rem;
        text-align: center;
    }

</style>


<section style="z-index:990; position: absolute; background-color:white; width:100%; height: 125%; padding-top:15%; padding-bottom:5%;" >

<div id="boxes" style="" >

        <div id="boxes">
            <!-- Year 10 Card -->
            <div class="card">
                <img src="~/Images/Snow.jpg" alt="">
                <h2 class="YearText">Year 10</h2>
                <h3 style="font-size: 1rem;">
                    ☼ 5 days | From NZ $445
                </h3>
                <p class="BoxText">
                    In Year 10, you will go skiing (in season), tramp in National Park, explore caves, relax in the Tokaanu hot pools, tackle ropes courses, walk along streams, go white water rafting, and try indoor climbing.
                </p>

                <!-- Year 10 Booking Form -->
                @{
                    if (ViewBag.Year == 10)
                    {
                        <form asp-action="Index" asp-controller="Camps">
                            <input name="Year" value="10" type="hidden" />
                            <input class="link" type="submit" value="Book" />
                        </form>
                    }
                    else
                    {
                        <form>
                            <input class="link" style="background-color: lightgray" type="submit" value="Book" disabled />
                        </form>
                    }
                }
            </div>

            <!-- Year 12 Card -->
            <div class="card">
                <img src="~/Images/water.jpg" alt="">
                <h2 class="YearText">Year 12</h2>
                <h3 style="font-size: 1rem;">
                    ☼ 5 days | From NZ $445
                </h3>
                <p class="BoxText">
                    In Year 12, you'll go mountain biking, rock climbing, tramping, caving. Stay in a DOC hut, take on ropes courses, tackle indoor climbing, and rafting in grade 2 waters. Also go skiing (in season).
                </p>

                <!-- Year 12 Booking Form -->
                @{
                    if (ViewBag.Year == 12)
                    {
                        <form asp-action="Index" asp-controller="Camps">
                            <input name="Year" value="12" type="hidden" />
                            <input class="link" type="submit" value="Book" />
                        </form>
                    }
                    else
                    {
                        <form>
                            <input class="link" style="background-color: lightgray" type="submit" value="Book" disabled />
                        </form>
                    }
                }
            </div>

            <!-- Year 13 Card -->
            <div class="card">
                <img src="~/Images/Boat.jpg" alt="">
                <h2 class="YearText">Year 13</h2>
                <h3 style="font-size: 1rem;">
                    ☼ 5 days | From NZ $445
                </h3>
                <p class="BoxText">
                    In Year 13, you'll go white water rafting, soak in Tokaanu hot pools, tramp in National Park, and camp overnight. Take on caving, traversing, climbing, and the high ropes course for an epic adventure.
                </p>

                <!-- Year 13 Booking Form -->
                @{
                    if (ViewBag.Year == 13)
                    {
                        <form asp-action="Index" asp-controller="Camps">
                            <input name="Year" value="13" type="hidden" />
                            <input class="link" type="submit" value="Book" />
                        </form>
                    }
                    else
                    {
                        <form>
                            <input class="link" style="background-color: lightgray" type="submit" value="Book" disabled />
                        </form>
                    }
                }
            </div>
        </div>

        </section>

    
    
    
