@model IEnumerable<WebApplication4.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Hire Gear</h1>


    @if (ViewBag.displayPopUp == true)
    {
    <div class="centeredPopUP">
        <h1>Your Item has been added to cart</h1>
        <p>@ViewBag.Item.Name</p> <!-- Display the Item Name from the ViewBag -->
        <p>${{ViewBag.Item.Price}}</p> <!-- Display the Item Price from the ViewBag -->
        <!-- Two forms with buttons: one to go back to index, the other to redirect to the open cart action -->
        <form asp-action="Index">
            <input type="submit" class="continue-shopping-btn active" value="Continue Shopping" />
        </form>

        <form asp-action="OpenCart" asp-controller="OrderItems">
            <input type="submit" value="Go to Cart" class="add-to-cart-btn" />
        </form>

        <style>

            .centeredPopUP {
                z-index: 1000;
                position: absolute;
                top: 5%;
                left: 20%;
                right: 20%;
                width: 60%;
                margin: auto;
                padding: 20px;
                text-align: center;
                background-color: #f0f0f0;
                border: 2px solid #333;
                border-radius: 10px;
                font-size: 24px;
                color: #333;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .ItemsPage {
                opacity: 20%
            }

            .centeredPopUP input[type ="submit"] {
                background-color: #333;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                font-size: 18px;
                margin-top: 20px;
            }

            .AddToCart, .FilterButtons {
                display: none;
            }

        </style>


    </div>
    }



<!--While pop up is displayed blur backgorund and hide add to cart buttons-->



<form asp-action="Search" asp-controller="Items">

            <input style="border-width: 2px; border-style:solid; height:4vh; border-radius:2px;" name="searchTerm" type="text" placeholder="Search Item" />
            <input value="Search" style=" background-color: #245b73; color:white;" class="btn btn-outline-primary" maxlength="50" type="submit" />

        </form>


<form asp-action="FilterByCategroy">
    @{
        //For each Cateogry stored in the view bag display an input in the form with the value being the category name.
        // When the user clicks a category the form will be sumbited to the Filter Action in the Items controller passing in the value into the method Cateogry parrameter.

        foreach (var Category in ViewBag.Category)
        {
            <input type="submit" class="FilterButtons" name="Category" value="@Category.Name" />
        }
    }
</form>





<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostToProduce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostToProduce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>

            <td>
                    <form asp-controller="OrderItems" asp-action="AddToCart">


                        <input type="hidden" name="itemId" value="@item.ItemId" />
                        <input type="submit" value="Add To Cart" class="AddToCart" />
                    </form>
                    
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
