@model IEnumerable<WebApplication4.Models.Item>
@using static WebApplication4.Models.Stock

@{
    ViewData["Title"] = "Index";
}

@{
    var sizes = ViewBag.Sizes as List<ShoeSize>;

    var s = ViewBag.Sizes as List<ClothingSize>;

}
@{
    @if (ViewBag.displaySizePicker == true)
    {
        <div>
<a style="margin-right:50%" asp-action="Index">Go back</a>

<div class="centeredPopUP" style="margin-top:5%">

    <div style="     background-color: #e0f2f1;
     border-radius:28px; width:39%; margin:auto; padding:1%;" class="Item">


        <img class="ItemImgage" src=" @ViewBag.Item.ImageURL" />



        <h5>  @ViewBag.Item.Name </h5>

        <h5>$@ViewBag.Item.Price </h5>


    </div>
    <!--Display the Item Name from the View Bag-->
    <!--Display the Item Price from the View Bag-->

