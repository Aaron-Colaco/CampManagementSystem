        height: 7vh;
    }

    body {
        overflow: hidden;
        margin-bottom: 0%;
        padding-bottom: 0%;
    }

    .centeredPopUP input[type ="submit"] {
        background-color: black;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        margin-top: 20px;
    }

