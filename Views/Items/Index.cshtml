                { @foreach (var size in ViewBag.Sizes)
                    {
                        <input type="submit" value="@((int)size)" name="size" class="btn btn-outline-secondary" />
                    }        
                }
                else
                { @foreach (var ss in ViewBag.Sizes)
                    {
