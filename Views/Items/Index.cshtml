@model IEnumerable<WebApplication4.Models.Item>
@using static WebApplication4.Models.Stock

@{
    ViewData["Title"] = "Index";
}

@{
    var sizes = ViewBag.Sizes as List<ShoeSize>;

    var s = ViewBag.Sizes as List<ClothingSize>;

}

@if (ViewBag.displaySizePicker == true)
{
    <a class="back-link" asp-action="Index">← Go back</a>

    <div class="centeredPopUP">
        <div class="item-card">
            <img class="ItemImage" src="@ViewBag.Item.ImageURL" alt="Item image" />
            <h3>@ViewBag.Item.Name</h3>
            <h4>$@ViewBag.Item.Price</h4>
        </div>

        <div>
            <h2>Please Pick a Size</h2>

            <form asp-controller="OrderItems" asp-action="AddToCart">
                <input name="itemId" type="hidden" value="@ViewBag.Item.ItemId" />

                @if (ViewBag.Sizes == null || ViewBag.Sizes.Count == 0)
                {
                    <p>No sizes available.</p>
                }
                else
                {
                    <div class="size-options">
                       @if(ViewBag.Item.CategoryId == 1){

                        @foreach (var size in ViewBag.Sizes)
                        {
                                <input type="submit" value="@((int)size)" name="size" class="btn btn-outline-secondary" />
                            }
                        }
                        else
                        {
                            @foreach (var ss in ViewBag.Sizes)
                            {
                                <input type="submit" value="@ss.ToString()" name="size" class="btn btn-outline-secondary" />
                            }


                        }
                        
                                                   
 }
                    </div>
                }
            </form>

        </div>
    </div>
}

@if (ViewBag.displayPopUp == true)
{
    <div class="centeredPopUP">
        <h2>Your item has been added to the cart</h2>
        <p><strong>@ViewBag.Item.Name</strong> - $@ViewBag.Item.Price</p>

        <form asp-action="Index">
            <input type="submit" value="Continue Shopping" class="popup-btn" />
        </form>
        <form asp-action="OpenCart" asp-controller="OrderItems">
            <input type="submit" value="Go to Cart" class="popup-btn" />
        </form>
    </div>

<style>
    body {
        background-color: #fff;
        color: #000;
        font-family: 'Segoe UI', sans-serif;
        overflow: hidden;
        margin: 0;
        height: 100vh;
    }

    .centeredPopUP {
        z-index: 1000;
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        padding: 30px;
        text-align: center;
        background-color: #fff;
        border: 2px solid #008080;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
    }

    .item-card {
        background-color: #000;
        color: #fff;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .ItemImage {
        height: 100px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .size-options input[type="submit"],
    .popup-btn {
        background-color: #008080;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 16px;
        margin: 8px;
        cursor: pointer;
        font-size: 16px;
        transition: background 0.3s ease;
    }

    .size-options input[type="submit"]:hover,
    .popup-btn:hover {
        background-color: #006666;
    }

    .back-link {
        display: inline-block;
        margin: 20px;
        color: #008080;
        font-weight: bold;
        text-decoration: none;
    }

    .warning-text {
        color: #c62828;
        font-weight: bold;
    }

    .AddToCart,
    .FilterButtons,
    .pagebuttons,
    .ItemsPage {
        display: none !important;
    }
</style>
}




<div class="ItemsPage">
    <br />
    <h1><b>Avcol's Range</b></></h1>

    <br />

    <div>
        @if (User.IsInRole("Admin"))//If the user is admin display
        {
            <a asp-action="Create">Create New</a>
        }




        <!--Form that passes the user input to the items Controller Search method-->
        <form asp-action="Search" asp-controller="Items">

            <input style="border-width: 2px; border-style:solid; height:4vh; border-radius:2px;" name="searchTerm" type="text" placeholder="Search Item" />
            <button type="submit" style="background: none; border: none; cursor: pointer;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-search" viewBox="0 0 16 16">
                    <path fill="black" d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                </svg>
            </button>

        </form>
        <br />
       
       
      
        <form asp-action="FilterByCategroy">
            @{
                //For each Cateogry stored in the view bag display an input in the form with the value being the category name.
                // When the user clicks a category the form will be sumbited to the Filter Action in the Items controller passing in the value into the method Cateogry parrameter.

                foreach (var Category in ViewBag.Category)
                {
                    <input type="submit" class="FilterButtons" name="Category" value="@Category.Name" />
                }
            }
        </form>
        <!--Reaload's the home page-->
        <form>

            <input class="FilterButtons" type="submit" asp-action="Index" value="See All" />

        </form>

    </div>


    <div class="ItemsBox">

        @{
            //If no product are found display no products and proivde the user a link to reload the items page.
            if (Model.FirstOrDefault() == null)
            {
                <h1> Products Not Found</h1>
                <a class="FilterButtons" asp-action="Index">See Products Here</a>

                <style>
                    .container {
                        height: 100vh;
                        !important;
                    }
                </style>
            }
            else
            {
                <style>
                    .container {
                        height: fit-content !important;
                    }
                </style>
            }
        }

        @foreach (var item in Model)
        {




            <div style="background-color:white; border-radius:28px;" class="Item">




                <img class="ItemImgage" src="@item.ImageURL" />


                <br />       <br />
                <h1 style="font-size:1rem; color: teal;">@Html.DisplayFor(modelItem => item.Name)</h1>

                <h1> @Html.DisplayFor(modelItem => item.Price)</h1>




                <p>  @Html.DisplayFor(modelItem => item.Categorys.Name) </p>


                @if (!User.IsInRole("Admin"))
                {


                    <form asp-controller="Items" asp-action="SizePicker">

                        <input type="hidden" name="itemId" value="@item.ItemId" />

                        <input type="submit" value="Add To Cart" class="AddToCart" />
                    </form>
                }

                @if (User.IsInRole("Admin"))//if the user is in the admin role display this content
                {






                    <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                }

                <br /> <br />
            </div>

        }

    </div>
</div>

<div>

    <form asp-action="Index" style="margin-left:76%; margin-top:8%; display:flex">
        @{
            // Loop through the number of pages creating a sumbit button, starting from 1 up to the value of ViewBag.Pages
            for (int i = 1; i < ViewBag.Pages; i++)
            {
                // Check if the current page number(i) is equal to the active page ViewBag.PageNumber
                @if (i == ViewBag.PageNUmber)
                {
                    // render a input submit button for the current page with value of i.
                    <input class="pagebuttons" name="Page" value="@i" type="submit" style="background-color: black; color:white; text-align:center; padding: 5px 10px; border: none; border-radius: 3px; width:50%; margin:3%; text-align:center;" />


                }
                else
                {
                // Render a submit button for the pthers page with a different styling form the active page with the value of i.
                    <input name="Page" class="pagebuttons" class="AddToCart" value="@i" type="submit" style="background-color: white; color: black; padding: 5px 10px; border: none; border-radius: 3px; width:35%; margin:3%; text-align:center;" />
                }
            }

            //When the user clicks a submit button it will pass the vlaue(page number ) to the index method.
        }
    </form>

</div>

