@model WebApplication4.Models.Order

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-top: 60px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center">Create</h1>
            <h4 class="text-center mb-4">Order</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label for="firstName">First Name</label>
                    <input type="text" name="FirstName" id="firstName" class="form-control"
                           pattern="[A-Za-z ]{1,50}"
                           minlength="1" maxlength="50"
                           title="First name must be 1-50 letters and spaces only"
                           required />
                    <small class="form-text text-muted">1-50 letters and spaces only</small>
                </div>

                <div class="form-group mb-3">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="LastName" id="lastName" class="form-control"
                           pattern="[A-Za-z ]{1,50}"
                           minlength="1" maxlength="50"
                           title="Last name must be 1-50 letters and spaces only"
                           required />
                    <small class="form-text text-muted">1-50 letters and spaces only</small>
                </div>

                <div class="form-group mb-3">
                    <label for="studentNumber">Student Number</label>
                    <input type="text" name="StudentNumber" id="studentNumber" class="form-control"
                           pattern="[0-9]{6}"
                           maxlength="6"
                           title="Must be exactly 6 digits"
                           required />
                    <small class="form-text text-muted">Must be exactly 6 digits</small>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" style=" border: none;" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
