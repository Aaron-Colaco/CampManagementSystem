@model IEnumerable<WebApplication4.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders Page</h1>

@if (!Model.Any())
{
    <div style="margin: auto;">
        <h1>No Orders Found</h1>
        <p>Click Add to Cart To Create an Order.</p>
        <a asp-controller="Items" asp-action="Index">See Products Here</a>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a style="color:teal" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">
                        @Html.DisplayNameFor(model => model.OrderTime)
                    </a>
                </th>
                <th>Total Price</th>
                <th>Status</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>User Email</th>
                }
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                    <td>
                        @if (!User.IsInRole("Admin"))
                        {
                            if (item.StatusId != 1)
                            {
                                <text>Thank you, Your Order is now @item.status.Name</text>
                            }
                            else
                            {
                                <text>Waiting to be Checked out</text>
                            }
                        }
                        else
                        {
                            <text>@item.status.Name</text>
                        }
                    </td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td>@item.user.Email</td>
                    }

                    <td>
                        @if (User.IsInRole("Admin") && item.StatusId != 1)
                        {
                            <a class="btn btn-primary" style="background-color: red" asp-controller="Stocks" asp-route-id="@item.OrderId" asp-action="AS">Assign Stock To User</a>
                        }

                        @if (item.status.Id == 1)
                        {
                            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                        }
                        else
                        {
                            <a asp-controller="OrderItems" asp-route-id="@item.OrderId" asp-action="Index">See Items</a>
                            <a asp-action="Details" asp-route-id="@item.OrderId">Details</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
