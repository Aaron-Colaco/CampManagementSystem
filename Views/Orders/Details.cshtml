@model WebApplication4.Models.Order

@{
    ViewData["Title"] = "Details";
}

@if(!User.IsInRole("Admin")){
<h2 class="text-center fw-bold mt-4 mb-5 text-black">
    Thank You for Your Order, @Html.DisplayFor(model => model.user.FirstName)!
</h2>
}

<style>
    .OrderStatus {
        width: 85%;
        position: relative;
        margin: 5% auto;
        margin-top: 10%;
        margin-bottom: 10%;
    }

    .empty-bar {
        background: #ddd;
        position: absolute;
        width: 90%;
        height: 10px;
        top: 50%;
        margin-left: 5%;
        border-radius: 5px;
        z-index: 1;
    }

    .color-bar {
        background: DarkGreen;
        position: absolute;
        height: 10px;
        top: 50%;
        margin-left: 4%;
    }

    .OrderStatus ul {
        display: flex;
        justify-content: space-between;
        list-style: none;
        padding: 0;
        position: relative;
        margin-top: -20px;
        z-index: 3;
    }

        .OrderStatus ul > li {
            background: #ddd;
            text-align: center;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            position: relative;
            transition: all 0.5s;
            z-index: 4;
        }

    .OrderStatus .txt {
        text-align: center;
        margin-top: 8px;
        width: fit-content;
        font-weight: bolder;
        font-size: 1rem;
    }

    .OrderStatus .bullet-1 .el,
    .OrderStatus .bullet-2 .el,
    .OrderStatus .bullet-3 .el,
    .OrderStatus .bullet-4 .el {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: white;
        background-color: black;
        border-radius: 50px;
    }


    .OrderStatus .txt {
        text-align: center;
        margin-top: 12px; 
        width: fit-content;
        font-weight: bolder;
        font-size: 1rem;
    }

    .OrderStatus ul > li {
        background: #ddd;
        text-align: center;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        position: relative;
        transition: all 0.5s;
        z-index: 4;
        transform: translateY(-8px);
    }

    .OrderStatus .txt {
        text-align: center;
        margin-top: 30px;
        width: fit-content;
        font-weight: bolder;
        font-size: 1rem;
    }

    OrderStatus .txt {
        text-align: center;
        margin-top: 30px; 
        width: 100%;
        font-weight: 600;
        font-size: 0.95rem;
        font-size: 0.85rem;
        max-width: 80px;
        text-align: center;
        word-wrap: break-word;
    }
</style>

@{
    if (Model.StatusId == 1)
    {
        <style>
            .color-bar {
                width: 0%;
                z-index: 2;
            }
        </style>
    }
    if (Model.StatusId == 2)
    {
        <style>
            .color-bar {
                width: 31%;
                z-index: 2;
            }
        </style>
    }
    if (Model.StatusId == 4)
    {
        <style>
            .color-bar {
                width: 61%;
                z-index: 2;
            }
        </style>
    }
    if (Model.StatusId == 3)
    {
        <style>
            .color-bar {
                width: 91%;
                z-index: 2;
            }
        </style>
    }
}

<div class="OrderStatus">
    <div class="empty-bar"></div>
    <div class="color-bar"></div>
    <ul>
        <li class="bullet-1">
            <div class="el"><i class="bx bx-check"></i>1</div>
            <div class="txt">Order Placed</div>
        </li>
        <li class="bullet-2">
            <div class="el"><i class="bx bx-check"></i>2</div>
            <div class="txt">Preparing Order</div>
        </li>
        <li class="bullet-3">
            <div class="el"><i class="bx bx-check"></i>3</div>
            <div class="txt">Unreturned</div>
        </li>
        <li class="bullet-4">
            <div class="el"><i class="bx bx-check"></i>4</div>
            <div class="txt">Returned </div>
        </li>
    </ul>
</div>

<div>
    <h3 class="text-black fw-bold">Order Details</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <span class="Headings">Order Time</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderTime)
        </dd>

        <dt class="col-sm-2">
            <span class="Headings">Order Price</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>

        <dt class="col-sm-2">
            <span class="Headings">Student Name</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.FirstName)
        </dd>
        <dt class="col-sm-2">
            <span class="Headings">Student Number </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.StudentNumber)
        </dd>
        <dt class="col-sm-2">
            <span class="Headings">Student Email </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.StudentNumber)@@avcol.school.nz

        </dd>

    </dl>
</div>
<div class="mt-4" style="font-size: 1rem; font-weight: bold; color: teal;">
    <a asp-controller="OrderItems" asp-action="Index" asp-route-id="@Model.OrderId" asp-route-SearchTerm="@ViewBag.SearchTerm" asp-route-Status="@ViewBag.Status" asp-route-page="@ViewBag.Page"
       style="color: teal !important; text-decoration: underline; display: block;">
        See Items In Order
    </a>
    <button type="button" onclick="window.history.back()" class="btn btn-link p-0"
            style="color: teal !important; font-weight: bold; font-size: 1rem; text-decoration: underline; display: block; margin-top: 0.5rem;">
        Go back
    </button>
</div>





<style>
    .Headings {
        color: darkGreen;
        font-weight: bold;
        font-size: 1rem;
    }
</style>
